#!/bin/sh

name=$(basename -- "$0")
data_dir="${XDG_DATA_HOME:-$HOME/.local/share}/dwmstatus/${name}"
text="${data_dir}/text"
clock=$(date '+%I')

case "$clock" in
        "00") icon="ðŸ•›" ;;
        "01") icon="ðŸ•" ;;
        "02") icon="ðŸ•‘" ;;
        "03") icon="ðŸ•’" ;;
        "04") icon="ðŸ•“" ;;
        "05") icon="ðŸ•”" ;;
        "06") icon="ðŸ••" ;;
        "07") icon="ðŸ•–" ;;
        "08") icon="ðŸ•—" ;;
        "09") icon="ðŸ•˜" ;;
        "10") icon="ðŸ•™" ;;
        "11") icon="ðŸ•š" ;;
        "12") icon="ðŸ•›" ;;
esac

[ -d "${data_dir}" ] || mkdir -p "${data_dir}"
date "+%Y %b %d (%a) $icon%I:%M%p" > "${text}"

